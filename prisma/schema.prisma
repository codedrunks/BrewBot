// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id
  coins     Int        @default(0)
  reminders Reminder[]
}

model Reminder {
  guild        String
  name         String
  dueTimestamp Int
  User         User?   @relation(fields: [userId], references: [id])
  userId       String  @id
}