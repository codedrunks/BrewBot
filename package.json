    "lint": "tsc --noEmit && eslint .",
    "watch": "nodemon --watch .env --watch \"src/**/*\" -e ts --inspect npm start",
    "clearCommands": "ts-node src/tools/clearCommands.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jabrils-Discord-Server/bot.git"
  },
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Jabrils-Discord-Server/bot/issues"
  },
  "homepage": "https://github.com/Jabrils-Discord-Server/bot#readme",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.23",
    "@types/steamapi": "^2.2.2",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "nodemon": "^2.0.16",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@discordjs/builders": "^0.15.0",
    "@discordjs/rest": "^0.5.0",
    "@prisma/client": "^3.15.1",
    "axios": "^0.27.2",
    "discord-api-types": "^0.34.0",
    "discord.js": "^13.8.0",
    "dotenv": "^16.0.0",
    "fs-extra": "^10.1.0",
    "kleur": "^4.1.4",
    "parse-relative-time": "^1.1.0",
    "prisma": "^3.15.1",
    "steamapi": "^2.2.0",
    "svcorelib": "^1.15.0"
  },
  "nodemonConfig": {
    "watch": [
      "src/*"
    ],
    "ignore": [
      "out/*",
      "node_modules/*",
      "test.js",
      "test.ts"
    ]
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}