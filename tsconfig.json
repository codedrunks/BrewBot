{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2022",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./out/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "sourceMap": true,
        "paths": {
            "@src/*": ["./src/*"],
            "@commands/*": ["./src/commands/*"],
            "@database/*": ["./src/database/*"],
            "@utils/*": ["./src/utils/*"],
            "@assets/*": ["./src/assets/*"],
        }
    },
    "files": [
        "src/bot.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "out",
        "src/api",
        "src/test.ts"
    ],
    "tsc-alias": {
        "replacers": {
            "base-url": {
                "enabled": false
            }
        }
    }
}
