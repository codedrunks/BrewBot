{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2022",
        "module": "esnext",
        "rootDir": "./src/",
        "outDir": "./out/",
        "strict": true,
        "lib": ["ES2022"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": true,
        "paths": {
            "@src/*": ["./src/*", "./out/src/*"],
            "@commands/*": ["./src/commands/*", "./out/src/commands/*"],
            "@database/*": ["./src/database/*", "./out/src/database/*"]
        }
    },
    "files": [
        "src/bot.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "out"
    ],
    "tsc-alias": {
        "replacers": {
            "base-url": {
                "enabled": false
            }
        }
    }
}
